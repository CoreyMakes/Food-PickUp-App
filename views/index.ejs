<%- include('partials/header.ejs') %>

<body>
  <nav class="navbar navbar-dark bg-primary" id="navbar">
    <!-- Navbar content -->
    <div id="title">Food Pick-Up App</div>
  </nav>

  <!-- CAROUSEL HERE -->
  <form action="/orders/:id" method="POST">
    <div id="main-container">
      <div id="pizza-container">
        <div id="pizza-title">Pizza</div>
        <div class="card-deck" id="pizza-display">

          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Chicken</h4>
              <div class="card-div">
                <img src="media/chicken_pizza.jpg" class="card-img">
              </div>
              <p class="card-text">$10</p>
            </div>
            <div class="custom-control custom-checkbox">
              <input name="pizza" value="chicken" type="checkbox" class="custom-control-input" id="customCheck1">
              <label class="custom-control-label" for="customCheck1">GET THIS PIZZA</label>
            </div>
          </div>

          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Cheese</h4>
              <div class="card-div">
                <img src="media/cheese_pizza.jpg" class="card-img">
              </div>
              <p class="card-text">$10</p>
            </div>
            <div class="custom-control custom-checkbox">
              <input name="pizza" value="cheese" type="checkbox" class="custom-control-input" id="customCheck2">
              <label class="custom-control-label" for="customCheck2">GET THIS PIZZA</label>
            </div>
          </div>

          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Pepperoni</h4>
              <div class="card-div">
                <img src="media/pepperoni_pizza.jpg" class="card-img">
              </div>
              <p class="card-text">$15</p>
            </div>
            <div class="custom-control custom-checkbox">
              <input name="pizza" value="pepperoni" type="checkbox" class="custom-control-input" id="customCheck3">
              <label class="custom-control-label" for="customCheck3">GET THIS PIZZA</label>
            </div>
          </div>
        </div>
        <br>
        <br>
        <br>
      </div>
      <div id="submit-div">
          <textarea name="phone" value="" placeholder="Phone Number" id="submit-text-area" ></textarea>
          <button id="submit-button" >Submit</button>
        </div>
    </div>
  </form>

</body>

</html>
