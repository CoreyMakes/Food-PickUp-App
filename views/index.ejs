<form action="/orders" method="POST">
  <div id="main-container">
    <div id="pizza-container">
      <div id="pizza-title">Pizza</div>
      <div id="pizza-display">

        <div class="container">
          <div class="row">

            <% for(var i = 0 ; i < menu.pizza.length; i++) {%>
            <div class="col-s-12 col-md-6 col-lg-4">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">
                    <%= menu.pizza[i].item_name%>
                  </h4>
                  <div class="card-div">
                    <img src="<%= menu.pizza[i].photo_URL %>" class="card-img img-fluid">
                  </div>
                  <p class="card-text">$
                    <%= menu.pizza[i].price %>
                  </p>
                </div>

                <select class="btn btn-secondary dropdown-toggle" name="<%= menu.pizza[i].id%>" >
                    <option value="0"></option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                  </select>


                  <br>
                  <br>

              </div>
            </div>
            <% if(i===2) { %>
          </div>
          <div class="row">
            <%}%>
            <% }%>

          </div>

        </div>
        <br>
        <br>
        <br>
      </div>
      <div id="submit-div">
        <textarea name="phone" value="" placeholder="Phone Number" id="submit-text-area"></textarea>
    <button id="submit-button">Submit</button>
      </div>
    </div>
  </div>
</form>

